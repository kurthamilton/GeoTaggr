@using GeoTaggr.Services.Maps

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />

    @*BOOTSTRAP*@
    @* <link rel="stylesheet" href="css/bootstrap.css" />
    <link rel="stylesheet" href="lib/bootstrap-icons/font/bootstrap-icons.min.css"> *@

    @*MUDBLAZOR*@
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />

    <link rel="stylesheet" href="css/site.css" />

    <link rel="icon" type="image/png" href="favicon.png" />
    <HeadOutlet @rendermode="@InteractiveServer" />
</head>

<body data-bs-theme="dark">
    <Routes @rendermode="@InteractiveServer" />
    <script src="_framework/blazor.web.js"></script>

    @*BOOTSTRAP*@
    @* <script src="lib/bootstrap/js/bootstrap.bundle.js"></script> *@

    @*MUDBLAZOR*@
    <script src="_content/MudBlazor/MudBlazor.min.js"></script>

    @*GOOGLE MAPS*@
    <script src="@GoogleMapsMarkerClustererUrl"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=@GoogleMapsApiKey&callback=console.debug&v=weekly"
            defer>
    </script>    

    <script src="js/gtgr.maps.js"></script>
</body>

</html>

@inject IMapService MapService
@code {
    private string GoogleMapsApiKey => MapService.GetGoogleMapsApiKey();

    private string GoogleMapsMarkerClustererUrl => "https://unpkg.com/@googlemaps/markerclusterer@2.5.1/dist/index.min.js";
}