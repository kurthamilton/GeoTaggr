@if (MudBreadcrumbs == null)
{
    return;
}

<MudPaper Class="mb-3">
    <MudBreadcrumbs 
        Class="gtgr-breadcrumbs"
        Items="@MudBreadcrumbs">
    </MudBreadcrumbs>
</MudPaper>
@code {
    [Parameter]
    public IReadOnlyCollection<GtgrBreadcrumbItem>? Breadcrumbs { get; set; }

    private List<BreadcrumbItem>? MudBreadcrumbs => Breadcrumbs
        ?.Select(x => new BreadcrumbItem(x.Text, x.Url, disabled: string.IsNullOrEmpty(x.Url)))
        .ToList();
}
