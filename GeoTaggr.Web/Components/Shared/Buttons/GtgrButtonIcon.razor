@using GeoTaggr.Web.Components.Shared.Icons

<GtgrButton
    Class="@($"{TypeClass} p-0")"
    Confirm="@Confirm"
    OnClick="@(() => OnClick.InvokeAsync())">
    <GtgrIcon Type="@Type"></GtgrIcon>
</GtgrButton>

@code {
    [Parameter]
    public string? Confirm { get; set; }

    [Parameter]
    public EventCallback OnClick { get; set; }

    [Parameter]
    public GtgrIconType Type { get; set; }

    private string? TypeClass => Type switch
    {
        GtgrIconType.Delete => "text-danger",
        _ => null
    };
}
