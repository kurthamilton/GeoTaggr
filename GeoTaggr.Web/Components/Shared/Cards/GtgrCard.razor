<MudCard id="@Id" Outlined="@Outlined" Class="gtgr-card">
    @if (Header != null)
    {
        <MudCardHeader>
            <h3>
                @Header
            </h3>
        </MudCardHeader>
    }

    <MudCardContent>
        @Content
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public string? Id { get; set; }

    [Parameter]
    public bool Outlined { get; set; }
}
