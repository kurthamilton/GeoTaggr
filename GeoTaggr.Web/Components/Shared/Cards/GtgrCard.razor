<MudCard Outlined="@Outlined" Class="gtgr-card">
    @if (Header != null)
    {
        <MudCardHeader>
            @Header
        </MudCardHeader>
    }

    <MudCardContent>
        @Content
    </MudCardContent>
</MudCard>

@code {
    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public RenderFragment? Header { get; set; }

    [Parameter]
    public bool Outlined { get; set; }
}
