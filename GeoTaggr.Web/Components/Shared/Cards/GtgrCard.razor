<div class="card">
    @if (Header != null)
    {
        <div class="card-header">
            <div class="card-title__text">@Header</div>
        </div>
    }
    
    <div class="card-body">
        @Content
    </div>
</div>

@code {
    [Parameter]
    public RenderFragment? Content { get; set; }

    [Parameter]
    public RenderFragment? Header { get; set; }
}
