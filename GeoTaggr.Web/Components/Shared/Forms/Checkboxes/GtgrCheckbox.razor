@using GeoTaggr.Core.Utils

<MudCheckBox
    T="bool"
    Label="@Label"
    Checked="@Value"
    CheckedChanged="@OnCheckboxChanged"
    Class="gtgr-checkbox">
</MudCheckBox>

@code {
    [Parameter]
    public string? Label { get; set; }

    [Parameter]
    public EventCallback<bool> OnChange { get; set; }

    [Parameter]
    public bool Value { get; set; }    

    private async Task OnCheckboxChanged(bool value)
    {
        Value = value;
        await OnChange.InvokeAsync(Value);
    }
}
