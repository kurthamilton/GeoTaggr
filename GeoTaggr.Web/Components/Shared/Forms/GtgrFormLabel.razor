@if (string.IsNullOrEmpty(Text))
{
    return;
}

<label class="form-label @(Required ? "required" : null)" for="@For">
    @Text
</label>

@code {
    [Parameter]
    public string? For { get; set; }

    [Parameter]
    public bool Required { get; set; }

    [Parameter]
    public string? Text { get; set; }
}
